<div class="container my-5 my-md-5">
  <h4 class="mb-3">設定</h4>
  <div class="row mt-md-3">
    <div class="col-md-3 mb-3">
      <ul class="nav flex-column">
        <li class="nav-item border border-secondary">
          <a class="nav-link text-danger" href="/accounts">アカウント</a>
        </li>
        <li class="nav-item border border-secondary">
          <a class="nav-link text-primary" href="/accounts/profile">プロフィール</a>
        </li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">アカウント</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <a class="btn btn-sm btn-outline-secondary" href="/users/edit">編集</a>
            <a class="btn btn-sm btn-outline-danger" href="/users/:id/unsubscribe">アカウント削除</a>
          </div>
          <div class="mt-4">
            <div class="form-group">
              <label class="font-weight-bold"><strong>メールアドレス</strong></label>
              <p class="form-control-static ms-5"><%= current_user.email %></p>
            </div>
            <div class="form-group">
              <label class="font-weight-bold"><strong>パスワード</strong></label>
              <p class="form-control-static ms-5">*********</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>