<div class="container my-5 my-md-5">
  <h4 class="mb-3">設定</h4>
  <div class="row mt-md-3">
    <div class="col-md-3 mb-3">
      <ul class="nav flex-column account-nav">
        <li class="nav-item border border-secondary">
          <a class="nav-link text-primary" href="/accounts">アカウント</a>
        </li>
        <li class="nav-item border border-secondary">
          <a class="nav-link text-danger" href="/accounts/profile">プロフィール</a>
        </li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="card account-info">
        <div class="card-header">
          <h5 class="mb-0">プロフィール</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <a class="btn btn-sm btn-outline-secondary" href="/accounts/profile/edit">編集</a>
            <%= link_to "アカウント削除", unsubscribe_path(id: current_user.id), class:"btn btn-sm btn-outline-danger"%>
          </div>
          <div class="account-info-group d-flex align-items-center">
            <div class="form-group d-flex align-items-center">
              <label class="account-label me-5"><strong>アイコン画像</strong></label>
              <p class="account-value"><%= image_tag current_user.image.blank? ? 'default-avatar.png' : current_user.image.url, class:"account-img img-field rounded-circle" %></p>
            </div>
          </div>
          <div class="account-info-group d-flex align-items-center mb-2">
            <div class="form-group">
              <label class="account-label me-5 pe-1"><strong>名前</strong></label>
              <p class="account-value align-middle ms-5"><%= current_user.name %></p>
            </div>
          </div>
          <div class="account-info-group">
            <div class="form-group">
              <label class="account-label"><strong>自己紹介</strong></label>
              <p class="account-value ps-5"><%= current_user.profile %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>