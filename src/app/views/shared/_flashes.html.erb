<div id="flash-message-container">
  <% flash.each do |key, value| %>
    <div class="alert <%= flash_class(key) %> alert-dismissible fade show"  id="flash-message">
      <strong>
        <%= value %>
      </strong>
    </div>
  <% end %>
</div>

<script>
    $(document).ready(function() {
      setTimeout(function() {
        $('.alert').alert('close');
      }, 2000);
    });
</script>
